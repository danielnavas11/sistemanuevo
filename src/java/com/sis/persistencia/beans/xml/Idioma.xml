<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sis.persistencia.dao.pojos.Idioma" table="idioma">
        <id name="id_idioma" type="java.lang.Integer" column="id_idioma">
            <generator class="sequence"> 
                <param name="sequence">idioma_id_idioma_seq</param>  
            </generator>
        </id>
        <property name="idioma" type="string"/>
        <property name="siglas" type="string"/>
        
    </class>
</hibernate-mapping>